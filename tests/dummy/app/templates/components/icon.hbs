<PaperContent @scroll-y={{true}} @padding={{true}} @class="layout-padding flex">

  <h2>Available Icons</h2>
  <p>
    See the <a href="https://design.google.com/icons/" rel="noopener" target="_blank">Material Icons page</a> for an overview of
    available icons.
  </p>

  <h3>Basic Icons</h3>
  <div class="layout-row layout-align-center-center">
    {{! BEGIN-SNIPPET icons.basic-usage }}
    <PaperIcon @positionalIcon="check-circle"/>
    {{! END-SNIPPET }}
  </div>

  {{#let (get-code-snippet "icons.basic-usage.hbs") as |snippet|}}
    <CodeBlock @language="markup">
{{snippet.source}}
    </CodeBlock>
  {{/let}}

  <h3>Changing Sizes</h3>
  <div class="layout-row layout-align-center-center">
    {{! BEGIN-SNIPPET icons.sizes }}
    <PaperIcon @positionalIcon="check-circle" @size=12/>
    <PaperIcon @positionalIcon="check-circle" @size=18/>
    <PaperIcon @positionalIcon="check-circle" @size=24/>
    <PaperIcon @positionalIcon="check-circle" @size=36/>
    <PaperIcon @positionalIcon="check-circle" @size=48/>
    {{! END-SNIPPET }}
  </div>

  {{#let (get-code-snippet "icons.sizes.hbs") as |snippet|}}
    <CodeBlock @language="markup">
{{snippet.source}}
    </CodeBlock>
  {{/let}}

  <h3>Spinners</h3>
  <div class="layout-row layout-align-center-center">
    {{! BEGIN-SNIPPET icons.spinners }}
    <PaperIcon @positionalIcon="rotate-right" @spin=true/>
    <PaperIcon @positionalIcon="rotate-left" @reverseSpin=true/>
    {{! END-SNIPPET }}
  </div>

  {{#let (get-code-snippet "icons.spinners.hbs") as |snippet|}}
    <CodeBlock @language="markup">
{{snippet.source}}
    </CodeBlock>
  {{/let}}
</PaperContent>
