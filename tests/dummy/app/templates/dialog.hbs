{{#paper-toolbar}}
    <div class="md-toolbar-tools">
      {{#paper-sidenav-toggle as |toggle|}}
        {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon icon="menu"}}{{/paper-button}}
      {{/paper-sidenav-toggle}}
        <span class="md-breadcrumb-page">Buttons</span>
    </div>
{{/paper-toolbar}}
{{#paper-content class="md-padding demo-buttons"}}
<div class="doc-content">
  <p>
    {{#paper-button action="showAlert"}}Alert{{/paper-button}}
    {{#paper-button action="showConfirm" primary=true}}Confirm{{/paper-button}}
    {{#paper-button action="showCustom"}}Custom Dialog{{/paper-button}}
  </p>

  {{#if isAlert}}
      {{paper-dialog
          type="alert"
          title="This is an alert title"
          content="You can specify some description text in here."
          cancel="Got it!"
          onCancel="closeAlert"
          parent='body'
          }}
  {{/if}}

  {{#if isConfirm}}
      {{paper-dialog
          title="This is a confirm dialog."
          content="You can specify some description text in here."
          confirm="Ok, got it!"
          onConfirm="handleDialog"
          cancel="Bye!"
          onCancel="closeConfirm"
          parent='body'
          }}
  {{/if}}

  {{#if isCustom}}
      {{#paper-dialog clickOutsideToClose=false onCancel="closeCustom" as |onCancel|}}
          {{#paper-toolbar}}
              <div class="md-toolbar-tools">
                  <h2 flex>Some awesome title</h2>
                  {{#paper-button action=onCancel icon-button=true}}
                      {{paper-icon icon="close"}}
                  {{/paper-button}}
              </div>
          {{/paper-toolbar}}
          <md-dialog-content style="min-width:500px;max-width:850px;">
              <h2>I'm a custom dialog and don't get closed if someone clicks outside!</h2>
              <p>
                  As the body isn't my parent, the sidenav remains visible!!
              </p>
              {{paper-input textarea=true label="I'm a textarea"}}
              {{paper-input label="And I'm not" value="just input"}}
              <p>

              </p>
          </md-dialog-content>
          <div class="md-actions">
                  {{#paper-button action="handleDialog" primary=true}}
                      Confirm
                  {{/paper-button}}

                  {{#paper-button action=onCancel primary=true}}
                      Close that thing!
                  {{/paper-button}}
          </div>
      {{/paper-dialog}}
  {{/if}}

  <h3>Template</h3>
  {{#code-block language='handlebars'}}
  &lt;p&gt;
    \{{#paper-button action="flatButton"}}Button with action\{{/paper-button}}
    \{{#paper-button noink=true primary=true}}Primary (noink)\{{/paper-button}}
    \{{#paper-button disabled=true}}disabled\{{/paper-button}}
    \{{#paper-button warn=true}}warn\{{/paper-button}}
  &lt;/p&gt;
  &lt;p&gt;
    \{{#paper-button raised=true action="raisedButton"}}Button with action\{{/paper-button}}
    \{{#paper-button raised=true primary=true}}Primary\{{/paper-button}}
    \{{#paper-button raised=true disabled=true}}disabled\{{/paper-button}}
    \{{#paper-button raised=true warn=true}}warn\{{/paper-button}}
  &lt;/p&gt;
  &lt;p&gt;
    \{{#paper-button raised=true action="targetButton" target=component}}Button with target\{{/paper-button}}
    \{{#paper-button raised=true primary=true action="targetButton" target=component}}Button with bubble\{{/paper-button}}
    \{{#paper-button raised=true primary=true action="targetButton" target=component bubbles=false}}Button no bubble\{{/paper-button}}
  &lt;/p&gt;
  &lt;p&gt;
    \{{#paper-button icon-button=true}}\{{paper-icon icon="more-vert"}}\{{/paper-button}}
  &lt;/p&gt;
  &lt;p&gt;
    \{{paper-button raised=true label="Blockless version"}}
  &lt;/p&gt;{{/code-block}}
</div>
{{/paper-content}}
