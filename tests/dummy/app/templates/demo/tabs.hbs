{{page-toolbar pageTitle="Tabs" isDemo=true}}

{{#doc-content}}
  {{#paper-card}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>Basic Usage</h2>
        <span class="flex"></span>
        {{#paper-button onClick=(action "toggleSourceCode" "tabs-basic") iconButton=true}}
          {{paper-icon icon="code"}}
        {{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    <div class="doc-code-example {{if showTabsBasic 'is-visible'}}">
      {{code-snippet name="tabs-basic.hbs"}}
    </div>

    {{! BEGIN-SNIPPET tabs-basic }}
    {{#paper-tabs as |tabs|}}
      {{#tabs.tab label="tab one" as |tab|}}
        {{#paper-content class="md-padding"}}
          <h1>Tab One</h1>
          <p>Lorem ipsum dolor sit amet.</p>
          <p>Lorem ipsum dolor sit amet.</p>
        {{/paper-content}}
      {{/tabs.tab}}
      {{#tabs.tab label="tab two" as |tab|}}
        {{#paper-content class="md-padding"}}
          <h1>Tab Two</h1>
          <p>Lorem ipsum dolor sit amet.</p>
        {{/paper-content}}
      {{/tabs.tab}}
      {{#tabs.tab label="tab three" as |tab|}}
        {{#paper-content class="md-padding"}}
          <h1>Tab Three</h1>
          <p>Lorem ipsum dolor sit amet.</p>
          <p>Lorem ipsum dolor sit amet.</p>
          <p>Lorem ipsum dolor sit amet.</p>
        {{/paper-content}}
      {{/tabs.tab}}
      {{#tabs.tab label="Disabled tab" disabled=true as |tab|}}
      {{/tabs.tab}}
    {{/paper-tabs}}
    {{! END-SNIPPET }}
  {{/paper-card}}

  {{#paper-card}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>Tabs with dynamic height</h2>
        <span class="flex"></span>
        {{#paper-button onClick=(action "toggleSourceCode" "tabsDynamic") iconButton=true}}
          {{paper-icon icon="code"}}
        {{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    <div class="doc-code-example {{if showTabsDynamic 'is-visible'}}">
      {{code-snippet name="tabs-dynamic.hbs"}}
    </div>

    {{! BEGIN-SNIPPET tabs-bottom }}
    {{#paper-tabs dynamicHeight=true as |tabs|}}
      {{#tabs.tab label="tab one" as |tab|}}
        {{#paper-content class="md-padding"}}
