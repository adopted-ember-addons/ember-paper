{{#paper-button iconButton=true noink=true class="md-datepicker-button"}}
  {{paper-icon "today" class="md-datepicker-calendar-icon"}}
{{/paper-button}}
<div class="md-datepicker-input-container">
  <input class="md-datepicker-input" aria-haspopup="true" placeholder={{label}} value={{formattedDate}}>
  {{#paper-button iconButton=true noink=true class="md-datepicker-triangle-button"}}
    <div class="md-datepicker-expand-triangle ng-scope"></div>
  {{/paper-button}}
</div>
