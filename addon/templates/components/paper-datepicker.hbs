{{#paper-datepicker-dropdown
  horizontalPosition=(readonly horizontalPosition)
  verticalPosition=(readonly verticalPosition)
  initiallyOpened=(readonly initiallyOpened)
  triggerComponent=(readonly triggerComponent)
  contentComponent=(readonly contentComponent)
  registerAPI=(action "registerAPI")
  as |dropdown|}}

  {{dropdown.trigger
    label=(readonly label)
    selected=(readonly selected)}}

  {{#dropdown.content
    class=(readonly concatenatedDropdownClasses)
    to=(readonly destination)}}

    {{#paper-calendar
      minDate=(readonly minDate)
      maxDate=(readonly maxDate)
      center=(readonly center)
      onCenterChange=(action (mut center) value="date")
      selected=(readonly selected)
      onSelect=(action "onDateSelected" value="moment")
      as |calendar|}}
        {{calendar.nav}}
        {{calendar.days showDaysAround=false}}
    {{/paper-calendar}}

  {{/dropdown.content}}
{{/paper-datepicker-dropdown}}
